{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
      {
          "name": "client",
          "image": "jwmcbride1/multi-client",
          "hostname": "client",
          "essential": false
        },
        {
            "name": "server",
            "image": "jwmcbride1/multi-server",
            "hostname": "api",
            "essential": false           
        },
        {
            "name": "worker",
            "image": "jwmcbride1/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "jwmcbride1/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links":  ["client", "server"]         
        }
    ]
}